<script>
document.querySelectorAll('.col-md-6.col-sm-12').forEach(function(block) {
    block.querySelectorAll('.nav-tabs a').forEach(function(tabLink) {
        tabLink.addEventListener('click', function(e) {
            e.preventDefault();
            // Remove active from all tabs in this block
            block.querySelectorAll('.nav-tabs li').forEach(function(li) {
                li.classList.remove('active');
            });
            // Set active to current tab
            this.parentElement.classList.add('active');
            // Hide all tab panes in this block
            block.querySelectorAll('.tab-pane').forEach(function(tabPane) {
                tabPane.classList.remove('active');
            });
            // Show selected tab pane
            var target = this.getAttribute('href');
            block.querySelector(target).classList.add('active');
        });
    });
});
</script>

